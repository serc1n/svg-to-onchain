{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "app.py"
        },
        {
            "src": "/convert",
            "methods": ["POST"],
            "dest": "app.py"
        },
        {
            "src": "/download/.*",
            "dest": "app.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "FLASK_APP": "app.py"
    }
} 